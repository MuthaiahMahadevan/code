import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String s = sc.nextLine();
		int n = s.length();
		char a[][] = new char[n][n];
		for(int i=0;i<n;i++)
		{
		    for(int j=0;j<n;j++)
		    {
		        if(i==j || (j+i)==n-1)
		        {
		            System.out.print(s.charAt(i));
		        }
		        else
		            System.out.print(" ");
		    }
		    System.out.print("\n");
		}
	}
}
